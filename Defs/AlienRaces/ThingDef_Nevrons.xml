            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        
        <!-- OUTILS DÉVASTATEURS -->
        <tools>
            <li>
                <label>griffes massives</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>25</power> <!-- TRÈS PUISSANT -->
                <cooldownTime>2.2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <label>mâchoires broyeuses</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>35</power> <!-- DÉVASTATEUR -->
                <cooldownTime>3</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.8</chanceFactor>
            </li>
            <li>
                <label>charge dévastatrice</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>28</power> <!-- TRÈS PUISSANT -->
                <cooldownTime>4</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.3</chanceFactor>
            </li>
        </tools>
        
        <!-- LUMINESCENCE TRÈS FORTE -->
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>6</glowRadius> <!-- TRÈS VISIBLE -->
                <glowColor>(200,100,220,0)</glowColor>
            </li>
        </comps>
        
        <butcherProducts>
            <Expedition33_ChromaRaw>8</Expedition33_ChromaRaw> <!-- BEAUCOUP -->
        </butcherProducts>
        
        <tradeTags>
            <li>AnimalExotic</li>
            <li>AnimalFighter</li>
        </tradeTags>
    </ThingDef>
</Defs>
