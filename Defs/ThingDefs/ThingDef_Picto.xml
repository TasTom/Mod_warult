<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Picto de Protection -->
    <ThingDef ParentName="ApparelBase">
        <defName>Expedition33_Picto_Guardian</defName>
        <label>picto gardien</label>
        <description>Un artefact chromatique en forme de bouclier stylisé. Augmente la résistance aux dégâts et confère une aura protectrice. Peut débloquer la Lumina "Égide Cristalline" après 4 victoires.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Pictos/PictoGuardian</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>UI/Icons/ThingCategories/Expedition33_Picto</wornGraphicPath>
            <layers>
                <li>Expedition33_Accessories</li>
            </layers>
            <tags>
                <li>Expedition33_Picto</li>
            </tags>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
        </apparel>
        <statBases>
            <WorkToMake>5000</WorkToMake>
            <MarketValue>400</MarketValue>
            <Mass>0.3</Mass>
            <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
            <Insulation_Cold>5</Insulation_Cold>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.05</MoveSpeed>
            <MentalBreakThreshold>-0.10</MentalBreakThreshold>
        </equippedStatOffsets>
        <costList>
            <Expedition33_Chroma>15</Expedition33_Chroma>
            <Steel>25</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <thingCategories>
            <li>Expedition33_Pictos</li>
        </thingCategories>
        <comps>
            <li Class="Mod_warult.CompProperties_PictoProgress">
                <luminaDefName>Expedition33_Lumina_CrystallineAegis</luminaDefName>
                <battlesRequired>4</battlesRequired>
                <pictoType>Guardian</pictoType>
            </li>
        </comps>
    </ThingDef>

    <!-- Picto d'Attaque -->
    <ThingDef ParentName="ApparelBase">
        <defName>Expedition33_Picto_Striker</defName>
        <label>picto frappeur</label>
        <description>Un cristal taillé en forme d'épée lumineuse. Augmente les dégâts de mêlée et la précision des attaques. Peut débloquer la Lumina "Lame Chromatique".</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Pictos/PictoStriker</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>UI/Icons/ThingCategories/Expedition33_Picto</wornGraphicPath>
            <layers>
                <li>Expedition33_Accessories</li>
            </layers>
            <tags>
                <li>Expedition33_Picto</li>
            </tags>
            <bodyPartGroups>
                <li>Arms</li>
            </bodyPartGroups>
        </apparel>
        <statBases>
            <WorkToMake>4500</WorkToMake>
            <MarketValue>350</MarketValue>
            <Mass>0.2</Mass>
        </statBases>
        <equippedStatOffsets>
            <MeleeDamageFactor>0.15</MeleeDamageFactor>
            <MeleeHitChance>3</MeleeHitChance>
            <WorkSpeedGlobal>0.10</WorkSpeedGlobal>
        </equippedStatOffsets>
        <costList>
            <Expedition33_Chroma>12</Expedition33_Chroma>
            <Steel>20</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <thingCategories>
            <li>Expedition33_Pictos</li>
        </thingCategories>
        <comps>
            <li Class="Mod_warult.CompProperties_PictoProgress">
                <luminaDefName>Expedition33_Lumina_ChromaticBlade</luminaDefName>
                <battlesRequired>4</battlesRequired>
                <pictoType>Striker</pictoType>
            </li>
        </comps>
    </ThingDef>

    <!-- Picto de Soins -->
    <ThingDef ParentName="ApparelBase">
        <defName>Expedition33_Picto_Healer</defName>
        <label>picto soigneur</label>
        <description>Un artefact en forme de coeur stylisé, pulsant d'une douce lumière. Accélère la guérison naturelle et résiste aux maladies. Peut débloquer la Lumina "Restauration Vitale".</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Pictos/PictoHealer</texPath>
           <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>UI/Icons/ThingCategories/Expedition33_Picto</wornGraphicPath>
            <layers>
                <li>Expedition33_Accessories</li>
            </layers>
            <tags>
                <li>Expedition33_Picto</li>
            </tags>
            <bodyPartGroups>
                <li>Torso</li>
            </bodyPartGroups>
        </apparel>
        <statBases>
            <WorkToMake>4000</WorkToMake>
            <MarketValue>320</MarketValue>
            <Mass>0.25</Mass>
        </statBases>
        <equippedStatOffsets>
            <InjuryHealingFactor>0.25</InjuryHealingFactor>
            <ImmunityGainSpeed>0.30</ImmunityGainSpeed>
            <MedicalTendQuality>0.15</MedicalTendQuality>
        </equippedStatOffsets>
        <costList>
            <Expedition33_Chroma>10</Expedition33_Chroma>
            <Steel>15</Steel>
            <Jade>5</Jade>
        </costList>
        <thingCategories>
            <li>Expedition33_Pictos</li>
        </thingCategories>
        <comps>
            <li Class="Mod_warult.CompProperties_PictoProgress">
                <luminaDefName>Expedition33_Lumina_VitalRestoration</luminaDefName>
                <battlesRequired>4</battlesRequired>
                <pictoType>Healer</pictoType>
            </li>
        </comps>
    </ThingDef>

   <!-- Picto Érudit (Scholar) -->
    <ThingDef ParentName="ApparelBase">
        <defName>Expedition33_Picto_Scholar</defName>
        <label>picto érudit</label>
        <description>Un artefact chromatique en forme de livre ouvert stylisé, pulsant d'une lumière intellectuelle. Améliore les capacités mentales et peut débloquer la Lumina "Perspicacité Chromatique" après 4 victoires au combat.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Pictos/PictoScholar</texPath>
             <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <apparel>
            <wornGraphicPath>UI/Icons/ThingCategories/Expedition33_Picto</wornGraphicPath>
            <layers>
                <li>Belt</li> <!-- Utilise la couche Belt au lieu d'Accessories -->
            </layers>
            <tags>
                <li>Expedition33_Picto</li>
            </tags>
            <bodyPartGroups>
                <li>Neck</li> <!-- Collier/pendentif intellectuel -->
            </bodyPartGroups>
        </apparel>
        <statBases>
            <WorkToMake>9000</WorkToMake>
            <MarketValue>450</MarketValue>
            <Mass>0.15</Mass>
            <Flammability>0.1</Flammability>
        </statBases>
        <equippedStatOffsets>
            <!-- Boosts intellectuels inspirés du jeu original -->
            <ResearchSpeed>0.35</ResearchSpeed>
            <SocialImpact>0.20</SocialImpact>
            <NegotiationAbility>0.30</NegotiationAbility>
            <TradePriceImprovement>0.15</TradePriceImprovement>
            <MentalBreakThreshold>-0.12</MentalBreakThreshold>
            <LearningRateFactor>0.25</LearningRateFactor>
        </equippedStatOffsets>
        <costList>
            <Expedition33_Chroma>18</Expedition33_Chroma>
            <Plasteel>15</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <Gold>10</Gold> <!-- Matériau noble pour l'aspect érudit -->
        </costList>
        <thingCategories>
            <li>Expedition33_Pictos</li>
        </thingCategories>
        <comps>
            <li Class="Mod_warult.CompProperties_PictoProgress">
                <luminaDefName>Expedition33_Lumina_ChromaticInsight</luminaDefName>
                <battlesRequired>4</battlesRequired>
                <pictoType>Scholar</pictoType>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>2</glowRadius>
                <glowColor>(120, 180, 220, 0)</glowColor> <!-- Lueur intellectuelle bleue -->
            </li>
        </comps>
    </ThingDef>


    <ThingCategoryDef>
        <defName>Expedition33_Pictos</defName>
        <label>pictos</label>
        <parent>Apparel</parent>
        <iconPath>UI/Icons/ThingCategories/Expedition33_Picto</iconPath>
    </ThingCategoryDef>

   
</Defs>
