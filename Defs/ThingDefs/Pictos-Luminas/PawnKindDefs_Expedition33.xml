<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Patch pour ajouter le composant de progression Ã  tous les humains -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ludeon.RimWorld</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Human"]</xpath>
                    <value>
                        <comps>
                            <li Class="Mod_warult.CompProperties_ExpeditionProgression"/>
                        </comps>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Defs>
