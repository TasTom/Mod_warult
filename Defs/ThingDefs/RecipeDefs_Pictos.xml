            <Crafting>8</Crafting>
            <Artistic>6</Artistic>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Expedition33_Chroma</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>25</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <products>
            <Expedition33_Picto_Guardian>1</Expedition33_Picto_Guardian>
        </products>
        <workSkill>Crafting</workSkill>
        <recipeUsers>
            <li>Expedition33_Armory</li>
        </recipeUsers>
        <researchPrerequisite>Expedition33_ArtisticWeapons</researchPrerequisite>
