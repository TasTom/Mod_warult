<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Recette pour analyser le Gommage -->
    <RecipeDef>
        <defName>AnalyzeGommage</defName>
        <label>analyser le phénomène de gommage</label>
        <description>Étudier les échantillons de corruption artistique pour comprendre les mécanismes du Gommage. Accélère la recherche anti-Gommage.</description>
        <jobString>analyse le Gommage.</jobString>
        <workAmount>4000</workAmount>
        <workSpeedStat>ResearchSpeed</workSpeedStat>
        <effectWorking>Research</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients>
        <recipeUsers>
            <li>Expedition33_Headquarters</li>
        </recipeUsers>
        <skillRequirements>
            <Intellectual>8</Intellectual>
        </skillRequirements>
        <researchPrerequisite>Expedition33_GommageAnalysis</researchPrerequisite>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cloth</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <products>
            <Silver>100</Silver>
        </products>
        <workSkill>Intellectual</workSkill>
    </RecipeDef>

    <!-- Recette pour planifier une mission d'urgence -->
    <RecipeDef>
        <defName>PlanEmergencyMission</defName>
        <label>planifier mission d'urgence anti-gommage</label>
        <description>Organiser une mission d'urgence pour évacuer les zones menacées par le Gommage. Améliore les chances de survie des colons.</description>
        <jobString>planifie une mission d'urgence.</jobString>
        <workAmount>2000</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Research</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients>
        <recipeUsers>
            <li>Expedition33_Headquarters</li>
        </recipeUsers>
        <skillRequirements>
            <Intellectual>6</Intellectual>
        </skillRequirements>
        <researchPrerequisite>Expedition33_ArtisticDetection</researchPrerequisite>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cloth</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <products>
            <Silver>75</Silver>
        </products>
        <workSkill>Intellectual</workSkill>
    </RecipeDef>

    <!-- Recette pour fabriquer bouclier anti-Gommage -->
    <RecipeDef>
        <defName>Make_AntiGommageShield</defName>
        <label>fabriquer bouclier anti-gommage</label>
        <description>Fabrique un bouclier personnel contre les effets du Gommage. Protection limitée mais efficace.</description>
        <jobString>fabrique un bouclier anti-gommage.</jobString>
        <workAmount>8000</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <recipeUsers>
            <li>Expedition33_Armory</li>
        </recipeUsers>
        <skillRequirements>
            <Crafting>8</Crafting>
        </skillRequirements>
        <researchPrerequisite>Expedition33_AntiGommageShield</researchPrerequisite>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Gold</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Expedition33_Chroma</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <products>
            <Expedition33_AntiGommageShield>1</Expedition33_AntiGommageShield>
        </products>
        <workSkill>Crafting</workSkill>
    </RecipeDef>


