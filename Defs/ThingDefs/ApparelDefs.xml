			<Steel>50</Steel>
			<Cloth>60</Cloth>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ExpeditionUniform/ExpeditionUniform</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Military</li>
				<li>Expedition33</li>
			</tags>
