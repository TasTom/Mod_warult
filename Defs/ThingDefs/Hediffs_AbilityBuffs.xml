<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Buffs des capacités spéciales -->
  <HediffDef>
    <defName>Expedition33_RegenerationBuff</defName>
    <label>régénération active</label>
    <description>Régénération accélérée des blessures.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.2, 0.8, 0.2)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>10000</disappearsAfterTicks> <!-- 30 secondes -->
      </li>
    </comps>
    <stages>
      <li>
        <statFactors>
          <InjuryHealingFactor>5.0</InjuryHealingFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

