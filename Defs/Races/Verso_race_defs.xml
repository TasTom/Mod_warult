<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Class="AlienRace.ThingDef_AlienRace" ParentName="Human">
    <defName>Expedition_VersoColon</defName>
    <label>Verso</label>
    <description>Un colon aux capacités spéciales.</description>

    <!-- Il s’agit d’un Pawn, catégorie Pawn -->
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <hasTooltip>true</hasTooltip>
    <soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>

    <!-- Ses stats de base -->
    <statBases>
      <Mass>60</Mass>
      <Flammability>0.7</Flammability>
      <MarketValue>1750</MarketValue>
      <MoveSpeed>4.6</MoveSpeed>
      <ComfyTemperatureMin>12</ComfyTemperatureMin>
      <ComfyTemperatureMax>32</ComfyTemperatureMax>
      <LeatherAmount>75</LeatherAmount>
    </statBases>

    <!-- Seule son ability-comp, PAS de BossAggro, NoNeeds, etc. -->
    <comps>
      <li Class="Mod_warult.CompProperties_AbilityUser"/>
    </comps>

    <race>
      <!-- ThinkTree standard pour un colon -->
      <thinkTreeMain>Humanlike</thinkTreeMain>
      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
      <intelligence>Humanlike</intelligence>
      <nameCategory>HumanStandard</nameCategory>
      <body>Human</body>
      <baseBodySize>1</baseBodySize>
      <baseHealthScale>1.2</baseHealthScale>
      <foodType>OmnivoreHuman</foodType>
      <gestationPeriodDays>45</gestationPeriodDays>
      <meatMarketValue>0.8</meatMarketValue>
      <leatherDef>Leather_Human</leatherDef>
      <hasGenders>true</hasGenders>
      <lifeExpectancy>80</lifeExpectancy>
      <makesFootprints>true</makesFootprints>

      <!-- On ne définit que l’adulte -->
      <lifeStageAges>
        <li Class="AlienRace.LifeStageAgeAlien">
          <def>HumanlikeAdult</def>
          <minAge>18</minAge>
        </li>
      </lifeStageAges>

      <ageGenerationCurve>
        <points>
          <li>(0.05,0)</li><li>(0.1,0.3)</li><li>(0.675,0.3)</li>
          <li>(0.75,0.23)</li><li>(0.875,0.15)</li><li>(1,0.04)</li>
          <li>(1.125,0)</li>
        </points>
      </ageGenerationCurve>
    </race>

    <alienRace>
      <generalSettings>
        <allowHumanBios>true</allowHumanBios>        <!-- recettes, bios humaines -->
        <humanRecipeImport>true</humanRecipeImport>
        <corpseCategory>CorpsesHumanlike</corpseCategory>
        <maleGenderProbability>1.0</maleGenderProbability>
        <immuneToAge>false</immuneToAge>

        <alienPartGenerator>
          <!-- utilisez les mêmes body/headTypes que les colons humains normaux -->
          <bodyTypes>
            <li>Male</li>
          </bodyTypes>
          <headTypes>
            <li>Male_AverageNormal</li>
            <li>Male_AverageWide</li>
            <li>Male_AveragePointy</li>
          </headTypes>
          <customDrawSize>(1.0,1.0)</customDrawSize>
          <customHeadDrawSize>(1.0,1.0)</customHeadDrawSize>
        </alienPartGenerator>
      </generalSettings>

      <graphicPaths>
        <head>
          <path>Things/Pawn/Humanlike/Heads/None</path>
        </head>
        <!-- <body>
          <path>Things/Pawn/Humanlike/Bodies/Humanlike/Colonist/Male</path>
        </body> -->
        <skinShader>CutoutSkin</skinShader>
      </graphicPaths>
    </alienRace>

    <!-- Vos extensions d’abilities -->
    <modExtensions>
      <li Class="Mod_warult.DefModExtension_AbilityUser">
        <abilityDefs>
          <li>Expedition33_ImmortalityFragment</li>
          <li>Expedition33_FractureParfaite</li>
        </abilityDefs>
        <autocast>false</autocast>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
