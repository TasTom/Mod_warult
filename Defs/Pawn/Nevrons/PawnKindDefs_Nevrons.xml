<Defs>
    <!-- Nevron Basique CORRIGÉ -->
    <PawnKindDef>
        <defName>Nevron_Basic</defName>
        <label>Lancelier</label>
        <race>Nevron</race>
        <defaultFactionType>Nevrons</defaultFactionType>
        
        <!-- COMBAT STATS -->
        <combatPower>35</combatPower>
        <canArriveManhunter>true</canArriveManhunter>
        <canBeSapper>false</canBeSapper>
        <factionLeader>false</factionLeader>
  
        <!-- EQUIPMENT (Créatures = pas d'équipement) -->
        <weaponMoney>0~0</weaponMoney>
        <apparelMoney>0~0</apparelMoney>
        <techHediffsMoney>0~0</techHediffsMoney>
        <aiAvoidCover>false</aiAvoidCover>
        <fleeHealthThresholdRange>0~0</fleeHealthThresholdRange>
        
        <!-- BACKSTORY POUR CRÉATURES -->
        <backstoryFiltersOverride>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>1</commonality>
            </li>
        </backstoryFiltersOverride>
         <lifeStages>
            <li>
            <bodyGraphicData>
                <texPath>Things/Pawn/Animal/Nevrons/lancier</texPath> <!-- TEMPORAIRE: utilisez des textures vanilla -->
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>3.0</drawSize>
                <!-- <color>(0.5, 0.3, 0.4)</color> Couleur corrompue -->
            </bodyGraphicData>
            <dessicatedBodyGraphicData>
                <texPath>Things/Pawn/Animal/Warg/Dessicated_Warg</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>3.0</drawSize>
            </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
        
        <!-- SUPPRIMÉ: lifeStages (appartient au ThingDef de la race) -->
    </PawnKindDef>

