<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <FactionDef>
        <defName>Nevrons</defName>
        <label>Forces du Gommage</label>
        <description>Une faction corrompue mêlant créatures bestiales et humains déchus par la Paintress. Ces entités jadis vivantes ont été transformées par le Gommage, perdant leur humanité mais conservant une intelligence collective terrifiante. Ils émergent des profondeurs pour répandre leur corruption.</description>
        
        <!-- ✅ CONFIGURATION DE BASE -->
        <categoryTag>Outlander</categoryTag>
        <listOrderPriority>40</listOrderPriority>
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxCountAtGameStart>2</maxCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <hidden>false</hidden>
        <maxConfigurableAtWorldCreation>4</maxConfigurableAtWorldCreation>
        <configurationListOrderPriority>60</configurationListOrderPriority>

        
        <!-- ✅ LEADERSHIP -->
        <leaderTitle>Nevron Suprême</leaderTitle>
        <factionIconPath>UI/Icons/Expedition33_NevronsIcon</factionIconPath>
        
        <!-- ✅ TECH LEVEL ET NAMING -->
        <techLevel>Neolithic</techLevel>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
        <factionNameMaker>NamerFactionOutlander</factionNameMaker>
        <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
        
        <!-- ✅ NOMENCLATURE -->
        <pawnSingular>Nevron</pawnSingular>
        <pawnsPlural>Nevrons</pawnsPlural>
        
        <!-- ✅ APPARENCE -->
        <colorSpectrum>
            <li>(0.3, 0.1, 0.4)</li>
            <li>(0.5, 0.2, 0.3)</li>
            <li>(0.4, 0.0, 0.4)</li>
        </colorSpectrum>
        
        <!-- ✅ HOSTILITÉ -->
        <permanentEnemy>true</permanentEnemy>
        <permanentEnemyToEveryoneExcept>
            <li>Ancients</li>
        </permanentEnemyToEveryoneExcept>
        
        <!-- ✅ BACKSTORIES -->
        <backstoryFilters>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>0.80</commonality>
            </li>
            <li>
                <categories>
                    <li>Tribal</li>
                </categories>
                <commonality>0.20</commonality>
            </li>
        </backstoryFilters>
        
        <!-- ✅ LEADERSHIP FIXE -->
        <fixedLeaderKinds>
            <li>NevronDechut</li>
        </fixedLeaderKinds>
        
        <!-- ✅ COMMERCE (Hostile mais peuvent dropper du loot) -->
        <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
        <allowedArrivalTemperatureRange>-60~60</allowedArrivalTemperatureRange>
        
        <!-- ✅ COURBES DE COÛT -->
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0, 200)</li>
                <li>(70, 300)</li>
                <li>(200, 500)</li>
                <li>(500, 800)</li>
                <li>(1000, 1000)</li>
                <li>(2000, 1500)</li>
                <li>(2001, 5000)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        
        <raidLootValueFromPointsCurve>
            <points>
                <li>(35, 15)</li>
                <li>(100, 80)</li>
                <li>(500, 200)</li>
                <li>(1000, 300)</li>
                <li>(2000, 500)</li>
            </points>
        </raidLootValueFromPointsCurve>

        <raidCommonalityFromPointsCurve>
            <points>
                <li>(0, 1)</li>
                <li>(50, 1.5)</li>
                <li>(200, 2)</li>
                <li>(500, 2.5)</li>
                <li>(1000, 3)</li>
            </points>
        </raidCommonalityFromPointsCurve>
        
        <!-- ✅ PAWN GROUP MAKERS COMPLETS -->
      <pawnGroupMakers>
            <!-- Combat Standard - Raids principaux -->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <Nevron_Basic>20</Nevron_Basic>           <!-- Unité de base, nombreuse -->
                    <Amphorien>12</Amphorien>                 <!-- Support/range -->
                    <Pitank>8</Pitank>                        <!-- Tank/breacher -->
                    <NevronDechut>5</NevronDechut>           <!-- Elite/leader -->
                    <PitankAlpha>1</PitankAlpha>             <!-- Boss rare -->
                </options>
            </li>
            
            <!-- Combat Breach - Raids destructeurs -->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>25</commonality>
                <options>
                    <Pitank>15</Pitank>                       <!-- Focus sur destruction -->
                    <PitankAlpha>3</PitankAlpha>             <!-- Plus de boss -->
                    <NevronDechut>12</NevronDechut>          <!-- Leaders tactiques -->
                    <Nevron_Basic>8</Nevron_Basic>           <!-- Support minimal -->
                    <Amphorien>5</Amphorien>                 <!-- Soutien à distance -->
                </options>
            </li>
            
            <!-- Peaceful - Événements non-hostiles -->
            <li>
                <kindDef>Peaceful</kindDef>
                <commonality>10</commonality>
                <options>
                    <Nevron_Basic>25</Nevron_Basic>
                    <Amphorien>8</Amphorien>
                    <NevronDechut>3</NevronDechut>
                    <Pitank>1</Pitank>
                </options>
            </li>
            
            <!-- Settlement - Base défensive -->
            <li>
                <kindDef>Settlement</kindDef>
                <commonality>50</commonality>
                <options>
                    <NevronDechut>15</NevronDechut>          <!-- Gardiens élites -->
                    <Pitank>12</Pitank>                       <!-- Défenseurs lourds -->
                    <PitankAlpha>2</PitankAlpha>             <!-- Boss de base -->
                    <Amphorien>10</Amphorien>                <!-- Tireurs défensifs -->
                    <Nevron_Basic>15</Nevron_Basic>          <!-- Patrouilleurs -->
                </options>
            </li>
        </pawnGroupMakers>

        
        <!-- ✅ NOM FIXE -->
        <fixedName>Forces du Gommage</fixedName>
    </FactionDef>
</Defs>
