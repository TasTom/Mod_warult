<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <FactionDef ParentName="FactionBase">
        <defName>Expedition33_Nevrons</defName>
        <label>Forces du Gommage</label>
        <description>Des créatures corrompues par la Paintress...</description>
        <listOrderPriority>40</listOrderPriority>

        <!-- FACTION NON-HUMANOÏDE -->
        <humanlikeFaction>false</humanlikeFaction> <!-- Ou humanoidFaction>false selon version -->
        
        <!-- SUPPRIMÉ: Pas de leaderTitle pour les créatures -->
        <!-- <leaderTitle>Nevron Chromatique</leaderTitle> SUPPRIMER CETTE LIGNE -->
        
        <!-- HOSTILITÉ -->
        <naturalEnemy>true</naturalEnemy>
        <permanentEnemy>true</permanentEnemy>
        
        <!-- SETTINGS BASIQUES -->
        <factionIconPath>UI/Icons/Expedition33_NevronsIcon</factionIconPath>
        <pawnSingular>Nevron</pawnSingular>
        <pawnsPlural>Nevrons</pawnsPlural>
        <categoryTag>AnimalColony</categoryTag>
        
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <maxCountAtGameStart>2</maxCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>false</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <autoFlee>false</autoFlee>
        
        <!-- TECH & NAMING -->
        <techLevel>Neolithic</techLevel>
        <factionNameMaker>NamerFactionTribal</factionNameMaker>
        <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
        
        <!-- COLORS -->
        <colorSpectrum>
            <li>(0.3, 0.1, 0.4)</li>
            <li>(0.5, 0.2, 0.3)</li>
        </colorSpectrum>

        <!-- RAIDS -->
        <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
        <allowedArrivalTemperatureRange>-60~60</allowedArrivalTemperatureRange>
        
        <!-- BACKSTORY POUR CRÉATURES -->
        <backstoryFilters>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>0.95</commonality>
            </li>
        </backstoryFilters>

        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0, 35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>



        <!-- MEMBER SETTINGS -->
        <basicMemberKind>Expedition33_Nevron_Basic</basicMemberKind>
        
        <!-- PAWN GROUPS -->
        <pawnGroupMakers>
            <li>
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <Expedition33_Nevron_Basic>10</Expedition33_Nevron_Basic>
                    <Expedition33_Amphorien>8</Expedition33_Amphorien>
                    <Expedition33_Pitank>3</Expedition33_Pitank>
                </options>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <commonality>100</commonality>
                <options>
                    <Expedition33_Nevron_Basic>12</Expedition33_Nevron_Basic> <!-- RÉDUIT de 15 -->
                    <Expedition33_Amphorien>12</Expedition33_Amphorien> <!-- AUGMENTÉ de 10 -->
                    <Expedition33_Pitank>4</Expedition33_Pitank> <!-- AUGMENTÉ de 2 -->
                </options>
            </li>
             <!-- AJOUT: SETTLEMENT RANGED ONLY (pour la variété) -->
            <li>
                <kindDef>Settlement_RangedOnly</kindDef>
                <commonality>30</commonality>
                <options>
                    <Expedition33_Nevron_Basic>8</Expedition33_Nevron_Basic>
                    <Expedition33_Amphorien>15</Expedition33_Amphorien> <!-- Plus d'Amphoriens à distance -->
                    <Expedition33_Pitank>2</Expedition33_Pitank>
                </options>
            </li>
        </pawnGroupMakers>
    </FactionDef>
</Defs>
