<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>Expedition33_PilgrimageBlessing</defName>
        <label>bénédiction de pèlerinage</label>
        <description>Ce Gestral a participé à un pèlerinage spirituel à la Rivière Sacrée, lui apportant paix intérieure et sagesse ancestrale.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.7, 0.9, 0.7)</defaultLabelColor>
        <isBad>false</isBad>
        <maxSeverity>1.0</maxSeverity>
        <initialSeverity>1.0</initialSeverity>
        
        <stages>
            <li>
                <statOffsets>
                    <MentalBreakThreshold>-0.20</MentalBreakThreshold>
                    <SocialImpact>0.15</SocialImpact>
                    <NegotiationAbility>0.25</NegotiationAbility>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
            </li>
        </stages>
        
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>
                    <min>900000</min><!-- 15 jours -->
                    <max>1200000</max><!-- 20 jours -->
                </disappearsAfterTicks>
            </li>
        </comps>
    </HediffDef>
</Defs>
